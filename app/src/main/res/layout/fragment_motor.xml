<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/opsi"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/warna"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@color/warna"
                android:layout_weight="1"
                android:text="Warna"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/spesifikasi"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@color/spesifikasi"
                android:layout_weight="1"
                android:text="Spesifikasi"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/aksesoris"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@color/aksesoris"
                android:layout_weight="1"
                android:text="Aksesoris"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fitur"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@color/fitur"
                android:layout_weight="1"
                android:text="Fitur"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_above="@id/opsi"
        android:id="@+id/activity_controller"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>



</RelativeLayout>
