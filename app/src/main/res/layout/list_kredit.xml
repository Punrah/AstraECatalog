<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:id="@+id/nama_kredit"
        android:padding="5dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="makan"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Program Cash"/>
        <TextView
            android:id="@+id/cash"
            android:padding="5dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="makan"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Program Kredit"/>
        <TextView
            android:id="@+id/kredit"
            android:padding="5dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="makan"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"></LinearLayout>
    <TextView
        android:gravity="center"
        android:id="@+id/bonus"
        android:padding="5dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="makan"/>




</LinearLayout>

